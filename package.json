{
  "name": "metrix.place",
  "version": "1.0.0",
  "description": "A communal graffiti board which any address can set a single pixel per MetrixCoin block by paying the gas fee for the transaction.",
  "scripts": {
    "gen-sitemap": "node ./scripts/generate-sitemap.mjs",
    "gen-robots": "node ./scripts/generate-robots.mjs",
    "postbuild": "npm run gen-sitemap && npm run gen-robots",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build-place": "tsc --project ./place/tsconfig.json",
    "build-next": "cross-env NODE_ENV=production next build",
    "build-server": "tsc --project ./server/tsconfig.json",
    "build-worker": "tsc --project ./server_worker/tsconfig.json",
    "build-dev": "npm run build-place && npm run build-server && npm run build-worker && npm run build-next",
    "build": "npm run build-dev && npm run postbuild",
    "start-dev": "cross-env NODE_ENV=development node .build/server/index.js",
    "start": "cross-env NODE_ENV=production nodemon .build/server/index.js",
    "lint-server": "eslint \"./server/**/*\"",
    "lint-worker": "eslint \"./server_worker/**/*\"",
    "lint-next": "next lint",
    "lint": "npm run lint-server && npm run lint-worker && npm run lint-next",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "compile": "npx hardhat compile",
    "test": "cross-env TS_NODE_PROJECT=./src mocha --config mocharc.json",
    "format": "prettier --write \"**/*.+(js|ts|json)\""
  },
  "author": "Cryptech Services",
  "license": "MIT",
  "dependencies": {
    "@fontsource/vt323": "^5.0.2",
    "@openzeppelin/contracts": "^4.8.3",
    "axios": "^1.4.0",
    "bitcoinjs-message": "^2.2.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "nodemon": "^2.0.22",
    "react-color": "^2.19.3",
    "react-cookie": "^4.1.1",
    "sequelize": "^6.32.0",
    "sharp": "^0.32.1",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@metrixcoin/metrilib": "^1.5.21-beta",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "22.9.0",
    "@types/react": "18.0.28",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "18.2.5",
    "@types/sequelize": "^4.28.15",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.5",
    "ethers": "^6.4.1",
    "globby": "^13.1.4",
    "hardhat": "^2.14.0",
    "mocha": "^10.2.0",
    "next": "13.2.3",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-react": "^2.1.4",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  }
}
